{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "lint": "eslint .",
    "load-local-config": "firebase functions:config:get > .runtimeconfig.json",
    "serve": "GOOGLE_APPLICATION_CREDENTIALS=credentials.json firebase emulators:start",
    "serve:functions": "GOOGLE_APPLICATION_CREDENTIALS=credentials.json firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "prettier": "prettier --write index.js",
    "load-algolia-config": "firebase functions:config:set algolia=\"$(cat .algoliaconfig.json)\"",
    "load-twitter-config": "firebase functions:config:set twitter=\"$(cat .twitterconfig.json)\"",
    "load-discord-config": "firebase functions:config:set discord=\"$(cat .discordconfig.json)\"",
    "load-patreon-config": "firebase functions:config:set patreon=\"$(cat .patreonconfig.json)\"",
    "load-global-config": "firebase functions:config:set global=\"$(cat .globalconfig.json)\"",
    "load-config": "npm run load-algolia-config && npm run load-twitter-config && npm run load-discord-config && npm run load-patreon-config && npm run load-global-config"
  },
  "engines": {
    "node": "10"
  },
  "dependencies": {
    "@google-cloud/storage": "^5.3.0",
    "algoliasearch": "^4.2.0",
    "deep-diff": "^1.0.2",
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.6.1",
    "node-fetch": "^2.6.0",
    "node-firestore-import-export": "^1.1.0",
    "patreon": "^0.4.1",
    "sharp": "^0.26.0",
    "twit": "^2.2.11"
  },
  "devDependencies": {
    "eslint": "^7.17.0",
    "eslint-plugin-promise": "^4.0.1",
    "firebase-functions-test": "^0.2.0",
    "prettier": "^2.0.5"
  },
  "private": true
}
